{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "plugin:react/recommended",
    "airbnb"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "@typescript-eslint"
  ],
  "rules": {
    "react/jsx-filename-extension": [
      "error", {
      "extensions": [".tsx"]
    }],
    "import/extensions": [
      "error", {
      ".tsx": "never"
    }]
  },
  "settings": {
    "import/resolver": {
      "typescript": "<root>/tsconfig.json"
    }
  }
}
